<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"       
        android:text="@string/main_title_text" />
    
     <TextView
        android:id="@+id/txtMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtMainTitle"
        android:text="view your mediaCode" />



    <com.mobon.sdk.RectBannerView
        xmlns:mobon="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rect_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        mobon:adType="BANNER_DEFAULT"
        />

</RelativeLayout>